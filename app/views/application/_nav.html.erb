<nav class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li><%= link_to 'Live Challenge', root_path, class: 'logo' %></li>

      <% if current_user %>
        <li><%= link_to 'Create a Question', new_question_path %></li>
      <% end %>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <% if current_user %>
        <% if File.exist?("public/#{current_user.avatar.to_s}") %>
          <li class="text"><%= image_tag current_user.avatar, class: 'avatar' %></li>
        <% end %>
        <li><%= link_to current_user.display_name, edit_user_registration_path %></li>
        <li>
          <%= link_to 'Sign Out',
                      destroy_user_session_path,
                      method: 'delete',
                      class: 'button alert' %>
        </li>
      <% else %>
        <li><%= link_to 'Sign In', new_user_session_path, class: 'button' %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path, class: 'button' %></li>
      <% end %>
    </ul>
  </div>
</nav>
