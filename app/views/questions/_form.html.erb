<%= render partial: 'application/errors' %>

<%= form_for @question, html: { class: 'question' } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <div id='markdown_preview'>
    <p>
      Your webbrowser doesn't support markdown previewing. Upgrade your
      browser for the best experience.
    </p>
  </div>

  <%= f.submit 'Save Question', class: 'button' %>
<% end %>
